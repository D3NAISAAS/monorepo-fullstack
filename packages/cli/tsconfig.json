{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"outDir": "dist",
		"declaration": true,
		"resolveJsonModule": true
	},
	"include": [
		"source/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}