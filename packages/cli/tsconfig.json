{
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"es2022",
			"DOM",
			"DOM.Iterable"
		],
		"module": "NodeNext",
		"moduleDetection": "force",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"outDir": "dist",
		"declaration": true,
		"resolveJsonModule": true
	},
	"include": [
		"source/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}